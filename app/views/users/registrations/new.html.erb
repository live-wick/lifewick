<div class="be-wrapper be-login">
  <div class="main-content container-fluid">
    <div class="splash-container">
      <div class="card card-border-color card-border-color-primary">
        <div class="card-header login-header m-0">
          <%= image_tag 'logo-2.png' %>
          <span class="splash-description">Please enter your user information.</span></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "parsley-validate"}) do |f| %>
            <%= devise_error_messages! %>
            <div class="login-form">
              <div class="form-group">
                <%= f.text_field :first_name, placeholder: "First name", class: "form-control", data: {"parsley-required": true} %>
              </div>
              <div class="form-group">
                <%= f.text_field :last_name, placeholder: "Last name", class: "form-control", data: {"parsley-required": true} %>
              </div>
              
               <div class="form-group">
                <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", class: "form-control", data: {"parsley-required": true, "parsley-type": "email"} %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, placeholder: "Password", class: "form-control", data: {"parsley-required": true} %>
              </div>
               <div class="form-group">
                <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control", data: {"parsley-required": true} %>
              </div>
              
              <div class="form-group row login-submit">
                <div class="col-6">
                  <%= link_to 'Login', root_path, class: "btn btn-secondary btn-xl" %>
                </div>
                <div class="col-6">
                  <%= f.submit "Sign up", class: "btn btn-primary btn-xl" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
