<!DOCTYPE html>
<html>
  <head>
    <title>Lifewick</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless ((params[:controller] == 'users/sessions') || (params[:controller] == 'users/registrations')) %>
      <%= render partial: "shared/header" %>
    <% end %>
    <%= yield %>
  </body>
</html>
